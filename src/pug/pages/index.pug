extends ../layout/_layout

block vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'Index'}
block content_block
	section.section 
		.section__in.section__in--display_flex
			main.main
				section.posts
					h1.posts__title Recent posts
					ul.posts__list 
						each item in posts 
							li.posts__list_item
								+card(item)
					button.posts__btn(type='button') older posts
			aside.aside 
				.aside__search
					button.aside__btn(type='submit') #[+icon('search_ico')]
					+form_input({
						type: 'search',
						label: '',
						placeholder: 'Search blog',
						value: '',
						id: '',
					})
				.aside__widget
					.aside__row 
						.aside__img 
							+icon('list_ico_1')
						h2.aside__title Announcements
					ul.aside__list 
						each announcement in announcements
							li.aside__list_item= announcement
				.aside__widget
					.aside__row 
						.aside__img 
							//- img(src="images/icons/list_ico_2.svg" alt="icon")
							+icon('list_ico_2')
						h2.aside__title Popular posts
					ul.aside__list 
						each popuparPost in popularPosts
							li.aside__list_item= popuparPost
				.aside__banner
					img(src="images/widget_1.jpg" alt="img")
				.aside__widget.aside__widget--no_border
					h2.aside__title.aside__title--margin_bottom Tag cloud
					.aside__tag_img 
						img(src="images/widget_2.jpg" alt="img")
